generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String

  expenses Expense[]
  budgets  Budget[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String
  userId      Int
  date        DateTime

  user Users @relation(fields: [userId], references: [id])
}

model Budget {
  id     Int   @id @default(autoincrement())
  userId Int
  amount Float
  month  Int
  year   Int

  user Users @relation(fields: [userId], references: [id])

  @@index([userId, month, year])
}
